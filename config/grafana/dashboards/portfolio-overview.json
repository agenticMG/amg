{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Total Portfolio Value",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "rawSql": "SELECT total_portfolio_value FROM portfolio_snapshots ORDER BY timestamp DESC LIMIT 1",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "green", "value": 1000 }
            ]
          }
        }
      }
    },
    {
      "title": "SOL Balance",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "rawSql": "SELECT sol_balance FROM portfolio_snapshots ORDER BY timestamp DESC LIMIT 1",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 4,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "green", "value": 2 }
            ]
          }
        }
      }
    },
    {
      "title": "Daily P&L",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "rawSql": "SELECT daily_pnl FROM portfolio_snapshots ORDER BY timestamp DESC LIMIT 1",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 0 }
            ]
          }
        }
      }
    },
    {
      "title": "Active Decisions (24h)",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "rawSql": "SELECT count(*) as decisions FROM agent_decisions WHERE timestamp > NOW() - INTERVAL '24 hours'",
          "refId": "A",
          "format": "table"
        }
      ]
    },
    {
      "title": "Portfolio Value Over Time",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 6 },
      "targets": [
        {
          "rawSql": "SELECT timestamp as time, total_portfolio_value as \"Total\" FROM portfolio_snapshots ORDER BY timestamp",
          "refId": "A",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      }
    },
    {
      "title": "Recent Trades",
      "type": "table",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "rawSql": "SELECT timestamp, action, input_token, output_token, input_amount, output_amount, pnl, success, dry_run FROM trades ORDER BY timestamp DESC LIMIT 20",
          "refId": "A",
          "format": "table"
        }
      ]
    },
    {
      "title": "Recent Decisions",
      "type": "table",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "rawSql": "SELECT timestamp, action, confidence, SUBSTRING(reasoning, 1, 100) as reasoning, success, dry_run FROM agent_decisions ORDER BY timestamp DESC LIMIT 20",
          "refId": "A",
          "format": "table"
        }
      ]
    },
    {
      "title": "Fee Claims",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 26 },
      "targets": [
        {
          "rawSql": "SELECT timestamp as time, total_usd_value as \"Fee USD\" FROM fee_claims ORDER BY timestamp",
          "refId": "A",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "currencyUSD" }
      }
    },
    {
      "title": "Risk Events",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 26 },
      "targets": [
        {
          "rawSql": "SELECT timestamp, rule_name, triggered, details, current_value, threshold, action FROM risk_events ORDER BY timestamp DESC LIMIT 20",
          "refId": "A",
          "format": "table"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["amg"],
  "templating": { "list": [] },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "utc",
  "title": "AMG - Portfolio Overview",
  "uid": "amg-portfolio",
  "version": 1
}
