{
  "annotations": { "list": [] },
  "editable": true,
  "panels": [
    {
      "title": "Trades by Action Type",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "rawSql": "SELECT action, count(*) as count FROM trades WHERE timestamp > NOW() - INTERVAL '7 days' GROUP BY action",
          "refId": "A",
          "format": "table"
        }
      ]
    },
    {
      "title": "Trade Success Rate (7d)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "rawSql": "SELECT ROUND(100.0 * SUM(CASE WHEN success THEN 1 ELSE 0 END) / NULLIF(COUNT(*), 0), 1) as success_rate FROM trades WHERE timestamp > NOW() - INTERVAL '7 days'",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 75 }
            ]
          }
        }
      }
    },
    {
      "title": "Cumulative P&L",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "rawSql": "SELECT COALESCE(SUM(pnl), 0) as total_pnl FROM trades",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 0 }
            ]
          }
        }
      }
    },
    {
      "title": "P&L Over Time",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "rawSql": "SELECT timestamp as time, pnl as \"Trade P&L\", SUM(pnl) OVER (ORDER BY timestamp) as \"Cumulative\" FROM trades WHERE pnl IS NOT NULL ORDER BY timestamp",
          "refId": "A",
          "format": "time_series"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "currencyUSD" }
      }
    },
    {
      "title": "Decision Confidence Distribution",
      "type": "histogram",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 18 },
      "targets": [
        {
          "rawSql": "SELECT confidence FROM agent_decisions WHERE timestamp > NOW() - INTERVAL '7 days'",
          "refId": "A",
          "format": "table"
        }
      ]
    },
    {
      "title": "Perp Positions (Open)",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 18 },
      "targets": [
        {
          "rawSql": "SELECT market, side, size, leverage, entry_price, stop_loss_price, opened_at FROM perp_positions WHERE status = 'open' ORDER BY opened_at DESC",
          "refId": "A",
          "format": "table"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["amg"],
  "time": { "from": "now-7d", "to": "now" },
  "title": "AMG - Trading Activity",
  "uid": "amg-trading",
  "version": 1
}
