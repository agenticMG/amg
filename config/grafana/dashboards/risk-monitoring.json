{
  "annotations": { "list": [] },
  "editable": true,
  "panels": [
    {
      "title": "Risk Events Today",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "rawSql": "SELECT count(*) as events FROM risk_events WHERE triggered = true AND timestamp > NOW() - INTERVAL '24 hours'",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 3 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "title": "Daily Loss %",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "rawSql": "SELECT COALESCE(ABS(daily_pnl_pct) * 100, 0) as loss_pct FROM portfolio_snapshots ORDER BY timestamp DESC LIMIT 1",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 20,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "title": "Consecutive Losses",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "rawSql": "WITH ranked AS (SELECT pnl, ROW_NUMBER() OVER (ORDER BY timestamp DESC) as rn FROM trades WHERE success = true) SELECT count(*) as consecutive FROM ranked WHERE pnl < 0 AND rn <= (SELECT MIN(rn) - 1 FROM ranked WHERE pnl >= 0 UNION ALL SELECT MAX(rn) + 1 FROM ranked)",
          "refId": "A",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "red", "value": 3 }
            ]
          }
        }
      }
    },
    {
      "title": "Risk Events Over Time",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 6 },
      "targets": [
        {
          "rawSql": "SELECT date_trunc('hour', timestamp) as time, rule_name, count(*) as events FROM risk_events WHERE triggered = true GROUP BY time, rule_name ORDER BY time",
          "refId": "A",
          "format": "time_series"
        }
      ]
    },
    {
      "title": "Risk Events by Rule",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "rawSql": "SELECT rule_name, count(*) as count FROM risk_events WHERE triggered = true AND timestamp > NOW() - INTERVAL '7 days' GROUP BY rule_name",
          "refId": "A",
          "format": "table"
        }
      ]
    },
    {
      "title": "Recent Risk Events",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "rawSql": "SELECT timestamp, rule_name, details, current_value, threshold, action FROM risk_events WHERE triggered = true ORDER BY timestamp DESC LIMIT 20",
          "refId": "A",
          "format": "table"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["amg"],
  "time": { "from": "now-7d", "to": "now" },
  "title": "AMG - Risk Monitoring",
  "uid": "amg-risk",
  "version": 1
}
